{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug fdf",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fdf", // Adjust this path to your binary
            "args": ["test_maps/airplane.fdf"], // Arguments for the program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb", // Use "gdb" if using GCC
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
